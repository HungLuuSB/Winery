@model Winery.Models.Address
@using Winery.Services;
@using Winery.Models;
@{
    ViewBag.Title = "Edit Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUser = Session["user"] as User;
}

<link rel="stylesheet" href="~/Content/user-details-style.css">
<div class="page-wrapper">
    <main class="page-content" id="maincontent">
        <div class="sidebar sidebar-main">
            @Html.Action("GetUserActions", "User", new { id = currentUser.UserID })
        </div>
        <div class="board">
            <div class="page-title-wrapper">
                <h1 class="page-title" id="page-title-heading">
                    EDIT ADDRESS
                </h1>
            </div>
            <div class="account-block dashboard-info">
                <div class="account-block-title">
                    <strong>Address</strong>
                </div>
                <div class="account-block-content">
                    <div class="account-box box-information">
                        @using (Html.BeginForm("Edit", "Address", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <strong class="box-title">
                                Address Information
                            </strong>
                            <div class="box-content">
                                <div class="user-form-field AddressCity">
                                    <label class="user-form-label" for="AddressCity">City</label>
                                    <div class="user-form-control">
                                        <input id="AddressCity" name="AddressCity" value="@Model.AddressCity" />
                                    </div>
                                </div>
                                <div class="user-form-field AddressProvince">
                                    <label class="user-form-label" for="AddressProvince">Province</label>
                                    <div class="user-form-control">
                                        <input id="AddressProvince" name="AddressProvince" value="@Model.AddressProvince" />
                                    </div>
                                </div>
                                <div class="user-form-field Address1">
                                    <label class="user-form-label" for="Address1">Address</label>
                                    <div class="user-form-control">
                                        <input id="Address1" name="Address1" value="@Model.Address1"/>
                                    </div>
                                </div>
                            </div>
                            <div class="box-actions">

                            </div>
                            <div class="box-actions-submit">
                                <button type="submit" class="user-edit-save-button" value="Save">
                                    SAVE ADDRESS
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>